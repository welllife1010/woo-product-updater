EXECUTION_MODE=development # development, production, test

WOO_API_BASE_URL=https://yourdomain.com
WOO_API_CONSUMER_KEY=ck_woo_api_consumerr_key
WOO_API_CONSUMER_SECRET=cs_woo_api_consumer_secret

WOO_API_BASE_URL_DEV=https://yourdevedomain.com
WOO_API_CONSUMER_KEY_DEV=ck_woo_api_consumerr_key_for_dev_env
WOO_API_CONSUMER_SECRET_DEV=cswoo_api_consumerr_secret_for_dev_env

WOO_API_BASE_URL_TEST=https://yourstagingdomain.com
WOO_API_CONSUMER_KEY_TEST=ck_woo_api_consumerr_key_for_staging_env
WOO_API_CONSUMER_SECRET_TEST=cs_woo_api_consumerr_secret_for_staging_env

AWS_REGION_NAME=aws_region_name # example: us-west-1
AWS_ENDPOINT_URL=aws_endpoint_url # eample: https://s3.us-west-1.amazonaws.com
S3_BUCKET_NAME=your_s3_bucket_name
S3_BUCKET_NAME_TEST=your_s3_bucket_name_for_test_env
S3_OBJECT_KEY=your_s3_object_key

DEBUG_LOGGING=true
BATCH_SIZE=20
CONCURRENCY=2
UPDATE_MODE=full  # Change to 'quantity' when only updating product quantity

# --- Redis host/port (local dev defaults) ---
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# --- Logical DB separation (safe defaults) ---
REDIS_DB_BULLMQ=0         # BullMQ queues/jobs
REDIS_DB_APP=1            # Your app KV (progress, counters, etc.)

# --- Optional: use one URL for your app's Redis client (handy for cloud/TLS) ---
# REDIS_URL_APP=rediss://:PASSWORD@your-redis-host:6380/1

# --- Optional auth/TLS (used only if set) ---
REDIS_TLS=false           # set true when you need TLS and no REDIS_URL_APP is provided
REDIS_USERNAME=
REDIS_PASSWORD=

# --- Namespaces / prefixes ---
BULLMQ_PREFIX=bull
APP_KEY_PREFIX=woo_updater:

# --- Queue name (nice to centralize) ---
QUEUE_NAME=batchQueue

# --- CSV header row (1-based index) ---
CSV_HEADER_ROW=1

# --- Start Redis (one-time in a terminal) ---
# brew services start redis

# or, if prefer foreground:
# redis-server --port 6379

# To check it's running:
# redis-cli ping
# Should respond with: PONG


# ---  To run (Once Redis is running): --- 
# node worker.js
# and in another terminal:
# node index.js

# or 
# pm2 start worker.js

# --- To run tests: ---
# npm test
# or
# npm test -- map-new-data.test.js

# --- fileKey ---
# The identifier for a specific source file being processed (the S3 object key / file name).
# The name we use everywhere to refer to this batch / this source file.
# “which CSV did this row come from?” (source file ID)